<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeginProjectAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextStyle_register">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">#80000000</item>
        <item name="android:layout_marginTop">@dimen/common_size_24dp</item>
        <item name="android:layout_marginStart">@dimen/common_size_24dp</item>
        <item name="android:layout_marginEnd">@dimen/common_size_24dp</item>
        <item name="android:background">@drawable/bg_edit_text_register</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:paddingStart">@dimen/common_size_12dp</item>
        <item name="android:paddingEnd">@dimen/common_size_12dp</item>
    </style>

    <style name="shape_image_view_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="style_text_view">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/common_size_8dp</item>
        <item name="android:paddingEnd">@dimen/common_size_8dp</item>
    </style>

</resources>